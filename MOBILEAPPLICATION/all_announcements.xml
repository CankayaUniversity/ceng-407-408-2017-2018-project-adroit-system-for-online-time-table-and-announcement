<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <TextView
        android:id="@+id/txt_ann"
        android:layout_width="304dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="     ALL ANNOUNCEMENTS"
        tools:textColorLink="@android:color/black" />

    <ImageView
        android:id="@+id/uni_logo"
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@android:color/background_light"
        android:scaleType="fitStart"
        android:src="@drawable/abc" />

    <TextView
        android:id="@+id/txt_u"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_ann"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="visible"
        tools:text="Operations That Will Be Updated or Deleted" />

    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="211dp"
        android:text="UPDATE" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_update"
        android:layout_marginStart="111dp"
        android:text="DELETE" />

    <EditText
        android:id="@+id/txt_anncontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_u"
        android:layout_marginStart="0dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName"
        android:text="AnnContent"
        android:visibility="visible" />

    <ListView
        android:id="@+id/list_ann"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice" />

    <EditText
        android:id="@+id/txt_pdate"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_update"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-211dp"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName"
        android:text="Publish Date"
        android:visibility="visible" />

    <EditText
        android:id="@+id/txt_edate"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_update"
        android:layout_marginBottom="-211dp"
        android:layout_toEndOf="@+id/txt_pdate"
        android:ems="10"
        android:enabled="true"
        android:inputType="textPersonName"
        android:text="Expire Date"
        android:visibility="visible" />

</RelativeLayout>
