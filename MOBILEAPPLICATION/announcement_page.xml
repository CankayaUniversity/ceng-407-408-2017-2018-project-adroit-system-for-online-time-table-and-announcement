<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <ImageView
        android:id="@+id/logo_uni"
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:scaleType="fitStart"
        android:src="@drawable/abc" />

    <TextView
        android:id="@+id/publish_ann"
        android:layout_width="281dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@android:color/darker_gray"
        android:gravity="left|center_vertical"
        android:text="TextView"
        android:textColorHighlight="@android:color/background_dark"
        android:textColorHint="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="PUBLISH ANNOUNCEMENT"
        tools:textColorLink="@android:color/black" />

    <TextView
        android:id="@+id/txt_expdate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="221dp"
        android:gravity="center_vertical"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:text="Expire Date:" />

    <CalendarView
        android:id="@+id/calendar_exp"
        android:layout_width="174dp"
        android:layout_height="285dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp"
        android:layout_toEndOf="@+id/txt_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="89dp"
        android:text="Announcement Content:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/asil_content"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/calendar_exp"
        android:layout_alignTop="@+id/txt_content"
        android:ems="10"
        android:enabled="true"
        android:inputType="textMultiLine"
        android:textColor="@android:color/background_dark"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_publish"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignEnd="@+id/calendar_exp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@android:color/holo_orange_light"
        android:enabled="true"
        android:text="PUBLISH"
        android:textSize="16sp"
        android:visibility="visible" />

</RelativeLayout>
